<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
	
	<style name="AppTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/App.Widget.ActionBar</item>
		<item name="android:textColorPrimary">@color/primary_text</item>
		<item name="android:textColorSecondary">@color/secondary_text</item>
	</style>
	
	<style name="App.Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
		<item name="android:titleTextStyle">@style/App.TextAppearance.ActionBar.Title</item>
		<item name="android:subtitleTextStyle">@style/App.TextAppearance.ActionBar.Subtitle</item>
		<item name="android:background">@drawable/ab_background</item>
		<item name="android:displayOptions">showTitle</item>
		<item name="android:height">@dimen/action_bar_size</item>
	</style>
	
	<style name="App.TextAppearance.ActionBar.Title" parent="@android:style/TextAppearance.Medium.Inverse">
		<item name="android:textColor">@color/text_color</item>
		<item name="android:textSize" tools:ignore="SpUsage">18dp</item><!-- Android default value -->
	</style>
	
	<style name="App.TextAppearance.ActionBar.Subtitle" parent="@android:style/TextAppearance.Small.Inverse">
		<item name="android:textColor">@color/text_color</item>
		<item name="android:textSize" tools:ignore="SpUsage">14dp</item><!-- Android default value -->
	</style>
	
	<style name="App.TextAppearance.Showcase" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>
	
</resources>
